{
  "name": "nap-serv",
  "version": "0.1.0",
  "description": "Track project costs, profitability, and payments with built-in double-entry accountingâ€”designed for growth, automation, and financial clarity.",
  "license": "MIT",
  "author": "Ian SIlverstone",
  "type": "module",
  "imports": {
    "#db/*": "./src/db/*"
  },
  "main": "server.js",
  "keywords": [
    "\"postgres\"",
    "\"pg-promise\"",
    "\"nodejs\"",
    "\"express\"",
    "\"pern\"",
    "\"project-costing\"",
    "\"double-entry\"",
    "\"accounting\"",
    "\"general-ledger\"",
    "\"bookkeeping\"",
    "\"financial-tracking\"",
    "\"activity-based-costing\"",
    "\"project-profitability\"",
    "\"accounts-payable\"",
    "\"accounts-receivable\"",
    "\"pg-schemata\""
  ],
  "scripts": {
    "setupAdmin:dev": "cross-env NODE_ENV=development node ./scripts/migrateAdmin.js",
    "setupAdmin:test": "cross-env NODE_ENV=test node ./scripts/migrateAdmin.js",
    "migrate:dev": "cross-env NODE_ENV=development node ./scripts/runMigrate.js",
    "migrate:test": "cross-env NODE_ENV=test node ./scripts/runMigrate.js",
    "migrateSql:dev": "cross-env NODE_ENV=development node ./scripts/migrateSql.js",
    "migrateSql:test": "cross-env NODE_ENV=test node ./scripts/migrateSql.js",
    "docs": "jsdoc -c jsdoc.json README.md && cp LICENSE docs/ && mkdir -p docs/images && cp docs-pages/images/nap-logo.png docs/images/",
    "lint": "eslint .",
    "seed": "cross-env NODE_ENV=development node ./scripts/seedPhase2.js",
    "test": "cross-env NODE_ENV=test vitest",
    "test:unit": "cross-env NODE_ENV=test vitest run tests/unit",
    "test:integration": "cross-env NODE_ENV=test vitest run tests/integration",
    "test:contract": "cross-env NODE_ENV=test vitest run tests/contract",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage --reporter html",
    "test:coverage:unit": "cross-env NODE_ENV=test vitest run tests/unit --coverage --reporter html",
    "test:coverage:integration": "cross-env NODE_ENV=test vitest run tests/integration --coverage --reporter html",
    "test:coverage:contract": "cross-env NODE_ENV=test vitest run tests/contract --coverage --reporter html",
    "dev": "cross-env NODE_ENV=development nodemon --delay 5 server.js",
    "start": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg-schemata": "file:../pg-schemata",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "fast-glob": "^3.3.3",
    "supertest": "^7.1.0",
    "uuid": "^11.1.0",
    "vitest": "^3.1.4"
  }
}
