{
  "name": "nap-serv",
  "version": "0.1.0",
  "description": "Track project costs, profitability, and payments with built-in double-entry accountingâ€”designed for growth, automation, and financial clarity.",
  "license": "MIT",
  "author": "Ian SIlverstone",
  "type": "module",
  "main": "server.js",
  "keywords": [
    "\"postgres\"",
    "\"pg-promise\"",
    "\"nodejs\"",
    "\"express\"",
    "\"pern\"",
    "\"project-costing\"",
    "\"double-entry\"",
    "\"accounting\"",
    "\"general-ledger\"",
    "\"bookkeeping\"",
    "\"financial-tracking\"",
    "\"activity-based-costing\"",
    "\"project-profitability\"",
    "\"accounts-payable\"",
    "\"accounts-receivable\"",
    "\"pg-schemata\""
  ],
  "scripts": {
    "migrate": "cross-env NODE_ENV=development node ./scripts/migrate.js",
    "docs": "jsdoc -c jsdoc.json README.md && cp LICENSE docs/ && mkdir -p docs/images && cp docs-pages/images/nap-logo.png docs/images/",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --detectOpenHandles --forceExit",
    "test:unit": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=unit --coverage",
    "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=integration --coverage",
    "test:tenant": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/tenant --coverage",
    "test:tenant:unit": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/tenants/unit --coverage",
    "test:tenant:integration": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/tenants/integration --coverage",
    "test:core": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/core --coverage",
    "test:core:unit": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/core/unit --coverage",
    "test:core:integration": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/core/integration --coverage",
    "dev": "cross-env NODE_ENV=development nodemon --delay 5 server.js",
    "start": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.37",
    "cross-env": "^7.0.3",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.0"
  }
}
