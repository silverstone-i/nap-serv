{
  "name": "nap-serv",
  "version": "0.1.0",
  "description": "Track project costs, profitability, and payments with built-in double-entry accountingâ€”designed for growth, automation, and financial clarity.",
  "license": "MIT",
  "author": "Ian SIlverstone",
  "type": "module",
  "imports": {
    "#db/*": "./src/db/*"
  },
  "main": "server.js",
  "keywords": [
    "\"postgres\"",
    "\"pg-promise\"",
    "\"nodejs\"",
    "\"express\"",
    "\"pern\"",
    "\"project-costing\"",
    "\"double-entry\"",
    "\"accounting\"",
    "\"general-ledger\"",
    "\"bookkeeping\"",
    "\"financial-tracking\"",
    "\"activity-based-costing\"",
    "\"project-profitability\"",
    "\"accounts-payable\"",
    "\"accounts-receivable\"",
    "\"pg-schemata\""
  ],
  "scripts": {
    "setupAdmin:dev": "cross-env NODE_ENV=development node ./scripts/setupAdminSchema.js",
    "setupAdmin:test": "cross-env NODE_ENV=test node ./scripts/setupAdminSchema.js",
    "migrate:dev": "cross-env NODE_ENV=development node ./scripts/runMigrate.js",
    "migrate:test": "cross-env NODE_ENV=test node ./scripts/runMigrate.js",
    "docs": "jsdoc -c jsdoc.json README.md && cp LICENSE docs/ && mkdir -p docs/images && cp docs-pages/images/nap-logo.png docs/images/",
    "lint": "eslint .",
    "seed": "cross-env NODE_ENV=development node ./scripts/seedPhase2.js",
    "test": "cross-env NODE_ENV=test vitest",
    "test:unit": "cross-env NODE_ENV=test vitest run tests/**/unit",
    "test:ui": "cross-env NODE_ENV=test vitest --ui",
    "test:watch": "cross-env NODE_ENV=test vitest --watch",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "test:accounting": "cross-env NODE_ENV=test vitest run tests/accounting",
    "test:accounting:unit": "cross-env NODE_ENV=test vitest run tests/accounting/unit",
    "test:accounting:integration": "cross-env NODE_ENV=test vitest run tests/accounting/integration",
    "test:ar": "cross-env NODE_ENV=test vitest run tests/ar",
    "test:ar:unit": "cross-env NODE_ENV=test vitest run --coverage tests/ar/unit",
    "test:ar:integration": "cross-env NODE_ENV=test vitest tests/ar/integration",
    "test:ap": "cross-env NODE_ENV=test vitest run tests/ap",
    "test:ap:unit": "cross-env NODE_ENV=test vitest run tests/ap/unit",
    "test:ap:integration": "cross-env NODE_ENV=test vitest run tests/ap/integration",
    "test:activities": "cross-env NODE_ENV=test vitest run tests/activities",
    "test:activities:unit": "cross-env NODE_ENV=test vitest run tests/activities/unit",
    "test:activities:integration": "cross-env NODE_ENV=test vitest run tests/activities/integration",
    "test:core": "cross-env NODE_ENV=test vitest run tests/core",
    "test:core:unit": "cross-env NODE_ENV=test vitest run tests/core/unit",
    "test:core:integration": "cross-env NODE_ENV=test vitest run tests/core/integration",
    "test:tenants": "cross-env NODE_ENV=test vitest run tests/tenants",
    "test:tenants:unit": "cross-env NODE_ENV=test vitest run tests/tenants/unit",
    "test:tenants:integration": "cross-env NODE_ENV=test vitest run tests/tenants/integration",
    "dev": "cross-env NODE_ENV=development nodemon --delay 5 server.js",
    "start": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg-schemata": "file:../pg-schemata",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "supertest": "^7.1.0",
    "uuid": "^11.1.0",
    "vitest": "^3.1.4"
  }
}
